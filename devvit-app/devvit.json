{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "devvit-trpc",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "post from here",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      },
      {
        "label": "Hello menu",
        "description": "show hello menu",
        "location": "post",
        "endpoint": "/internal/menu/hello-menu"
      },
      {
        "label": "Admin menu",
        "description": "show admin menu",
        "location": "post",
        "endpoint": "/internal/menu/admin-menu",
        "forUserType": "moderator"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "devvit_trpc_dev"
  },
  "permissions": {
    "reddit": true
  },
  "forms": {
    "adminForm": "/internal/form/admin-form"
  }
}
